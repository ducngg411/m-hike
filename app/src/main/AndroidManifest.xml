<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MHike">
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AddHikeActivity" />
        <activity android:name=".activities.HikeDetailActivity" />
        <activity android:name=".activities.EditHikeActivity" />
        <!-- Observations -->
        <activity
            android:name=".activities.AddObservationActivity"
            android:label="Add Observation"
            android:theme="@style/Theme.MHike"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".activities.ObservationListActivity"
            android:label="Observations"
            android:theme="@style/Theme.MHike"/>

        <activity
            android:name=".activities.EditObservationActivity"
            android:label="Edit Observation"
            android:theme="@style/Theme.MHike"
            android:windowSoftInputMode="adjustResize"/>

        <!-- Advanced Search-->
        <activity android:name=".activities.AdvancedSearchActivity"
            android:label="Advanced Search"
            android:theme="@style/Theme.MHike"
            android:windowSoftInputMode="adjustResize"/>

        <!-- Profile -->
        <activity
            android:name=".activities.ProfileActivity"
            android:label="Profile"
            android:theme="@style/Theme.MHike"/>
    </application>

</manifest>