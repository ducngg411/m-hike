<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â°"
                android:textSize="20sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvObsTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15/12/2024 14:30"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:textStyle="bold"/>

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_indicator"/>
        </LinearLayout>

        <!-- Observation Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvObsObservation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spotted a beautiful deer"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"/>
        </LinearLayout>

        <!-- Comment (if exists) -->
        <LinearLayout
            android:id="@+id/layoutComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¬"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvObsComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="It was near the river bank"
                android:textSize="14sp"
                android:textColor="#34495E"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditObs"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3498DB"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp"
                style="?attr/materialButtonOutlinedStyle"/>

            <Button
                android:id="@+id/btnDeleteObs"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Delete"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E74C3C"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:cornerRadius="8dp"
                style="?attr/materialButtonOutlinedStyle"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>