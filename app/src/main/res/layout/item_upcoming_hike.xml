<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#E8F8F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“…"
            android:textSize="20sp"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUpcomingHikeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snowdon Mountain"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"/>

            <TextView
                android:id="@+id/tvUpcomingHikeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/12/2024"
                android:textSize="12sp"
                android:textColor="#7F8C8D"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvUpcomingHikeLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wales, UK"
                android:textSize="12sp"
                android:textColor="#7F8C8D"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvUpcomingHikeLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.5 km"
            android:textSize="12sp"
            android:textColor="#16A085"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>