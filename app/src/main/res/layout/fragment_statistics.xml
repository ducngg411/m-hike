<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Overall Statistics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Your Hiking Stats"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="16dp"/>

                <!-- Total Hikes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥¾"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Hikes"
                            android:textSize="12sp"
                            android:textColor="#95A5A6"/>

                        <TextView
                            android:id="@+id/tvStatTotalHikes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Total Observations -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Observations"
                            android:textSize="12sp"
                            android:textColor="#95A5A6"/>

                        <TextView
                            android:id="@+id/tvStatTotalObs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Total Distance -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Distance"
                            android:textSize="12sp"
                            android:textColor="#95A5A6"/>

                        <TextView
                            android:id="@+id/tvStatTotalDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 km"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Difficulty Distribution Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Difficulty Distribution"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="16dp"/>

                <!-- Easy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Easy"
                        android:textSize="14sp"
                        android:textColor="#27AE60"/>

                    <ProgressBar
                        android:id="@+id/progressEasy"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:progressTint="#27AE60"
                        android:max="100"
                        android:progress="0"/>

                    <TextView
                        android:id="@+id/tvStatEasy"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#27AE60"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- Moderate -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Moderate"
                        android:textSize="14sp"
                        android:textColor="#F39C12"/>

                    <ProgressBar
                        android:id="@+id/progressModerate"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:progressTint="#F39C12"
                        android:max="100"
                        android:progress="0"/>

                    <TextView
                        android:id="@+id/tvStatModerate"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F39C12"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- Hard -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Hard"
                        android:textSize="14sp"
                        android:textColor="#E74C3C"/>

                    <ProgressBar
                        android:id="@+id/progressHard"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:progressTint="#E74C3C"
                        android:max="100"
                        android:progress="0"/>

                    <TextView
                        android:id="@+id/tvStatHard"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#E74C3C"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- Very Hard -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Very Hard"
                        android:textSize="14sp"
                        android:textColor="#8E44AD"/>

                    <ProgressBar
                        android:id="@+id/progressVeryHard"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:progressTint="#8E44AD"
                        android:max="100"
                        android:progress="0"/>

                    <TextView
                        android:id="@+id/tvStatVeryHard"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#8E44AD"
                        android:gravity="end"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Upcoming Hikes Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—“ï¸ Upcoming Hikes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerUpcomingHikes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

                <TextView
                    android:id="@+id/tvNoUpcoming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No upcoming hikes"
                    android:textSize="14sp"
                    android:textColor="#95A5A6"
                    android:gravity="center"
                    android:padding="20dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>